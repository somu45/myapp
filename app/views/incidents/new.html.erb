<%= form_for(@incident, :multipart => true, class: "form-horizontal") do |f| %>
    <div class="form-group">
      <label for="file" class="control-label col-xs-2">Select File :</label>
      <div class="col-xs-10">
        <%= f.file_field :file %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= f.submit %>
      </div>
    </div>
<% end %>