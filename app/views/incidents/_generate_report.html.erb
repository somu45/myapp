<%if @data.present?%>
<div  style="width: 100%;overflow: auto">
  <table id="reports_table" width="95%" border="0" align="center" valign="top" class="table table-bordered table-striped tablesorter">
    <thead>
        <tr>
        <% @data.first.attributes.keys.each{ |label| %>
          <th>
            <%= label.upcase.split("_").join(" ")%>
          </th>
        <% } %>
        </tr>
    </thead>
    <tbody>
       <% @data.each{|row| %>
            <tr>
            <% row.attributes.each{ |k,v| %>
              <td>
                <%= v %>
              </td>
            <% } %>
            </tr>
        <% } %>
    </tbody>
  </table>
</div>
<div style="float: right;">
  <%= paginate @data, :remote => true %>
</div>
<%else%>
<div style="background-color: transparent">
  <p class="alert alert-danger fade in"><%= @error_msg %></p>
</div>
<%end%>




<script type="text/javascript" charset="utf-8">
    $("#reports_table").DataTable({
        "paging":   false
    });
</script>